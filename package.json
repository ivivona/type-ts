{
  "name": "type-ts",
  "version": "1.0.0",
  "description": "Typescript Type-level Playground",
  "main": "index.ts",
  "scripts": {
    "prepublish": "npm run lint && npm test",
    "test": "dtslint tests",
    "lint": "tslint --project tsconfig.json --fix 'src/*.ts' 'index.d.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivivona/type-ts.git"
  },
  "keywords": [
    "typescript",
    "typelevel",
    "typing",
    "MIT",
    "javascript"
  ],
  "author": "Ignacio Vivona",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivivona/type-ts/issues"
  },
  "homepage": "https://github.com/ivivona/type-ts#readme",
  "devDependencies": {
    "dtslint": "^0.3.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "^3.1.6"
  }
}
